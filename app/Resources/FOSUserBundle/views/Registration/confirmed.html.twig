{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <h1 class="page-header" id="page-title">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-xs-1" style="padding: 10px;">
                        <i class="fa fa-question fa-5x text-right"></i>
                    </div>
                    <div class="col-xs-11 panel-text" style="padding: 20px;">
                        If you use FENNEC for the first time and you want to learn the main features follow the user manual
                        <a href="https://fennec.readthedocs.io/en/latest/user.html">here</a>.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-xs-1" style="padding: 10px;">
                        <i class="fa fa-search fa-5x text-right"></i>
                    </div>
                    <div class="col-xs-11 panel-text" style="padding: 20px;">
                        No idea what to do next? Explore FENNEC's <a href={{ path('trait_search', {'dbversion': dbversion  }) }}>trait database</a>
                        and <a href="{{ path('organism_search', {'dbversion': dbversion}) }}">organism database</a>.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-xs-1" style="padding: 10px;">
                        <i class="fa fa-book fa-5x text-right"></i>
                    </div>
                    <div class="col-xs-11 panel-text" style="padding: 20px;">
                        You already have a community data table? What are you waiting for? Upload your data
                        <a href={{ path('project_overview', {'dbversion': dbversion  }) }}>here</a>.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-xs-1" style="padding: 10px;">
                        <i class="fa fa-table fa-5x text-right"></i>
                    </div>
                    <div class="col-xs-11 panel-text" style="padding: 20px;">
                        You have trait information? Then upload your data and share it with other users
                        <a href={{ path('my_traits', {'dbversion': dbversion  }) }}>here</a>.
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
